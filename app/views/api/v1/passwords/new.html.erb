<h1 style="text-align:center;color:#3570D2;font-weight:bold;padding-bottom:3%">Lupa Kata Sandi</h1>

<%= form_with url: api_v1_password_forget_path do |form|%>

<div style="padding-right: 10%;padding-left:10%;padding-bottom:10;text-align:center;%"> 
     <%= form.label :email %>
     <%= form.text_field :email, placeholder: "Masukkan email", class:"form-control", type:"email" %> 
</div>

<div style="text-align:center">
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
</div>
<% end %>